{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "slice2solid: Run GUI (dev)",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python.exe",
      "args": ["run_gui.py"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "slice2solid: Build EXE (onefile)",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", ".\\build_exe.ps1"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "slice2solid: Build Installer (onedir + Inno)",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", ".\\build_installer.ps1"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
